{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false, // Temporarily disable to fix later
    "noUnusedParameters": false, // Temporarily disable to fix later
    "noFallthroughCasesInSwitch": true,
    
    /* Vite specific */
    "types": ["vite/client"] // Add Vite client types for import.meta.hot
  },
  "include": ["src"]
}